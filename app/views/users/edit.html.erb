<!-- app/views/users/edit.html.erb -->

<%= render 'layout/top' %>
<%= form_with(model: @user, url: user_path(@user), method: :patch, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div class="actions">
    <%= form.submit "Update" %>
  </div>
<% end %>
<%= render 'layout/bottom' %>